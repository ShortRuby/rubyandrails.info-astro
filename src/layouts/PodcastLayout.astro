---
import Layout from "./BaseLayout.astro";

import AuthorList from "../components/AuthorList.astro";
import BackButton from "../components/BackButton.astro";
import ListAllPodcasts from "../components/ListAllPodcasts.astro";

const { frontmatter } = Astro.props;
---

<Layout
  title={`${frontmatter.title}`}
  seoDescription={frontmatter.description}
  seoKeywords={`${frontmatter.title}, `}
>

  <BackButton title="Podcasts" link="podcasts" /> 
  <!-- <AuthorList list="frontmatter.authors" /> -->

  </div>
    <h1 class="mb-6 font-medium text-5xl md:text-6xl capitalize max-w-5xl lg:text-7xl">
      {frontmatter.title} 
    </h1>

      <div class="mb-8">
      by
	      <span class=" inline-block mb-2 capitalize">
	        { frontmatter.authors.map((author, i) => (
	          <a href=`/authors/${author.replace(/ /g, "-")}` class="hover:text-red-500">
              { i === frontmatter.authors.length - 1 ? author : author + ","}
	          </a>
	        ))
	        }
	      </span>
	    </div>

    <div class="flex mb-40 flex-col-reverse lg:flex-row gap-8 sm:gap-12 lg:gap-28">
      <div class="max-w-4xl">
        <p class="text-3xl xl:text-4xl xl:leading-normal mb-8">
          {frontmatter.description}
        </p>
        <a
        target="_blank"
          href={frontmatter.link}
          class="group items-center gap-4 hover:bg-slate-900 text-white bg-red-500 duration-200 transition rounded-xl shadow-xl shadow-red-600/20 hover:shadow-2xl hover:shadow-slate-900/30 w-full justify-center px-8 sm:w-auto lg:px-20 py-4 md:py-6 text-3xl font-medium inline-flex"
        >
         Listen Podcast 
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            class="h-6 w-6 group-hover:rotate-45 transition duration-200"
            viewBox="0 0 24 24"
            stroke-width="2.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"></path>
          </svg>
        </a>
      </div>
      { frontmatter.cover &&
      <img
        src=`/podcasts/${frontmatter.cover}.jpg`
        alt=""
        class="shrink-0 border border-slate-200/80 shadow-xl rounded-md w-1/2 sm:w-1/3 self-start"
      />
      }
    </div>
  </div>

  <ListAllPodcasts title="More podcasts" link />
</Layout>
