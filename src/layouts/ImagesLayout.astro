---
import Layout from "./Layout.astro";

export interface Props {
  title: string;
}

const links = [
  { title: "All", url: "" },
  { title: "Galleries", url: "galleries" },
  { title: "Generation", url: "generation" },
  { title: "Tools", url: "tools" },
  { title: "Logo Makers", url: "logos" },
  { title: "Other", url: "other" },
];

const { title, pageTitle } = Astro.props;
---

<Layout title={title}>
  <h1 class="font-black text-white text-7xl px-5 mb-4 mt-8">
    {title}
  </h1>
  <div class="mb-8 flex gap-2 px-5 text-white">
    {links.map((c) => <a href=`/images/${c.url}` class="bg-purple-400/40 hover:bg-purple-400/80 transition px-6 py-1 rounded-full">{c.title}</a>)}
  </div>
  <slot />
</Layout>
