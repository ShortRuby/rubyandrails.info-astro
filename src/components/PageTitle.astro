---
import Button from "./Button.astro";
const { category, subtitle } = Astro.props;
---

<div
  class="mb-12 border-b border-indigo-300/30 pb-10 flex flex-col lg:flex-row justify-between"
>
  <h1 class="font-medium mb-8 max-w-4xl text-4xl sm:text-5xl lg:text-7xl">
    {subtitle ? <span class="" /> : <span>{category} about</span>}
    {
      subtitle ? (
        <span class="capitalize justify-start gap-4">
          <a
            href="/books"
            class="inline-block hover:text-red-600 transition text-red-500"
          >
            All Books /
          </a>
          {subtitle}
        </span>
      ) : (
        <span class="capitalize block">Ruby and Ruby on Rails</span>
      )
    }
  </h1>
  <Button title="Add new" link="" size="medium" />
</div>
