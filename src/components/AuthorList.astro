---
const { list } = Astro.props;
---

<div class="mb-8">
by
	<span class=" inline-block mb-2 capitalize">
	  { list.map((author, i) => (
	    <a href=`/authors/${author.replace(/ /g, "-")}` class="hover:text-red-500">
        { i === list.length - 1 ? author : author + ","}
	    </a>
	  ))
	  }
	</span>
</div>
