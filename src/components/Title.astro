---
const { category, subtitle } = Astro.props;
---

<div
  class="mb-12 border-b border-indigo-300/30 pb-10 flex flex-col lg:flex-row justify-between"
>
  <h1 class="font-medium mb-8 max-w-4xl text-4xl sm:text-5xl lg:text-7xl">
    {subtitle ? <span class="" /> : <span>{category} about</span>}
    {
      subtitle ? (
        <span class="capitalize justify-start gap-4">
          <a
            href="/books"
            class="inline-block hover:text-red-600 transition text-red-500"
          >
            All Books /
          </a>
          {subtitle}
        </span>
      ) : (
        <span class="capitalize block">Ruby and Ruby on Rails</span>
      )
    }
  </h1>
  <a
    href="#"
    class="flex hidden gap-2 shadow-xl items-center bg-slate-800 hover:bg-red-500 group transition px-4 py-2 rounded-lg self-start text-white"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      class="h-5 w-5 group-hover:rotate-180 transition duration-300"
      viewBox="0 0 24 24"
      stroke-width="2.5"
      stroke="currentColor"
      aria-hidden="true"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6"
      ></path>
    </svg>

    Add New</a
  >
</div>
