---
import Layout from "./../../layouts/BaseLayout.astro";

import Card from "../../components/CardPodcast.astro";
import Title from "../../components/Title.astro";

const allData = await Astro.glob("./*.md");
---

<Layout
  title="Podcasts about Ruby & Ruby On Rails"
  pageTitle="Ruby & Ruby on Rails"
  seoDescription="AI Tools can help you with marketing, advertising, search, and more. Limitations? There are none!"
  seoKeywords="ai tools, ai search, ai marketing, ai translation, ai shopify"
>
  <Title category="Podcasts" />

  <div
    class="grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-8 xl:gap-12"
  >
    {
      allData.map((i) => (
        <Card
          title={i.frontmatter.title}
          path={i.frontmatter.path}
          authors={i.frontmatter.authors}
          cover={i.frontmatter.cover}
          url={i.url}
          description={i.frontmatter.description}
        />
      ))
    }
  </div>
</Layout>
